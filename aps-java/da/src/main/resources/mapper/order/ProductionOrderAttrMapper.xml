<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aps.mapper.order.ProductionOrderAttrMapper">

    <!-- 基础结果映射 -->
    <resultMap id="BaseResultMap" type="com.aps.entity.order.ProductionOrderAttr">
        <id column="id" property="id"/>
        <result column="ord_id" property="ordId"/>
        <result column="attr_key" property="attrKey"/>
        <result column="attr_value" property="attrValue"/>
        <result column="remark" property="remark"/>
        <result column="created_time" property="createdTime"/>
        <result column="created_by" property="createdBy"/>
        <result column="updated_time" property="updatedTime"/>
        <result column="updated_by" property="updatedBy"/>
        <result column="deleted" property="deleted"/>
    </resultMap>

    <!-- 基础列 -->
    <sql id="Base_Column_List">
        id, ord_id, attr_key, attr_value, remark,
        created_time, created_by, updated_time, updated_by, deleted
    </sql>

    <!-- 根据订单ID查询所有属性 -->
    <select id="selectByOrdId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM ord_prod_attr
        WHERE ord_id = #{ordId}
        AND deleted = 0
        ORDER BY created_time
    </select>

    <!-- 根据订单ID删除所有属性（逻辑删除） -->
    <update id="deleteByOrdId">
        UPDATE ord_prod_attr
        SET deleted = 1,
            updated_time = NOW()
        WHERE ord_id = #{ordId}
          AND deleted = 0
    </update>

    <!-- 批量插入属性 -->
    <insert id="batchInsert">
        INSERT INTO ord_prod_attr (
        id,
        ord_id,
        attr_key,
        attr_value,
        remark,
        created_time,
        created_by,
        updated_time,
        updated_by,
        deleted
        ) VALUES
        <foreach collection="attrs" item="attr" separator=",">
            (
            #{attr.id},
            #{attr.ordId},
            #{attr.attrKey},
            #{attr.attrValue},
            #{attr.remark},
            NOW(),
            #{attr.createdBy},
            NOW(),
            #{attr.updatedBy},
            0
            )
        </foreach>
    </insert>

</mapper>
